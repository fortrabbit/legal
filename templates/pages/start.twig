{% block precontent %}



<div class="homepage oblique-end">
    <div class="row gutter-xl m-top-xl">
        <div class="formcontainer">
            <h3 class="m-top-l">
                Try it for free
            </h3>
            <form class="gutter-no m-top-s" action method="post">
                <div class="labelinput">
                    <label class="minilabel" for="e-mail">
                        Your e-mail address
                    </label>
                    <input type="email" name="e-mail" id="e-mail" class="input" autofocus required>
                </div>
                <div class="labelinput">
                    <label class="minilabel" for="e-mail">
                        Choose a save password
                    </label>
                    <input type="password" name="password" id="password" class="input" required minlength="8">
                    <label for="unmask-password" class="passwordtoggle" data-tooltip="Unveil password">
                        <span>ðŸ‘€</span>
                        <input type="checkbox" name="unmask-password" id="unmask-password" checked="checked" value="c">
                    </label>
                    <div class="info">
                        8 chars min
                    </div>
                </div>
                <button class="action">
                    Create a trial App
                </button>
            </form>
            <p class="type-s m-top-s">
                Cancel at any time. No Credit card required. <a href="/terms">Terms</a> apply.
            </p>
            <script>
                var chkbox      = document.getElementById('unmask-password');
                var form        = document.getElementById('form');

                chkbox.addEventListener('click', function (e) {
                    var password    = document.getElementById('password');

                    password.type = e.currentTarget.checked ? 'password' : 'text';
                    password.autocomplete = 'off';
                    password.focus();
                });

                form.addEventListener('submit', function (e) {
                    password.type = 'password';
                });
            </script>
        </div>
        <div class="textcontainer">
            <h1 class="m-top-m type-black">
                You don't need a server
                {#
                <span class="type-l">This is</span><br>
                <span class="type-black type-xxl">PHP as a Service</span><br>
                #}
            </h1>
            <p class="type-l">
                This is <strong>PHP as a Service</strong>.<br>
                Deploy with Git &amp; Composer. <br>
                Collaborate with ease. <br>
                Scale on demand. <br>
                Have fun.
            </p>
        </div>

    </div>
</div>

