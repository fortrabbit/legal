{% extends "layout.twig" %}
{% set title = "Craft CMS hosting for digital agencies" %}
{% set activeClass = 'nav_craft' %}
{% set bodyClass   = 'marketing' %}


{% set cta = {
'campaign'        : 'craft',
'button_wording_1': 'Start your trial',
'button_wording_2': 'see Craft hosting in action'
} %}




{% block precontent %}

    <div class="hero image craft oblique-end">
        <h1 style="font-size: 9vw">
            Craftsmen hosting
        </h1>
        <p class="claim">
            fast &amp; reliable Craft CMS hosting
        </p>
        {% include 'snippets/quick-signup-stacked-hero.twig' with {
        'headline': 'Try a better Craft CMS hosting',
        'campaign': 'craft'
        } %}
    </div>

{% endblock %}




{% block content %}

    <h2 class="type-xl">
        Why to host Craft CMS on fortrabbit
    </h2>
    <div class="row gutter-l wrap m-top-l">
        <div class="third half-t">
            {% include '/snippets/batteries-included.twig' %}
        </div>
        <div class="third half-t">
            <h3>Setting up Craft</h3>
            <p>
                <a href="{{ help_url }}/install-craft-uni">Installing Craft</a> on fortrabbit hosting is painless. Just
                do some configuration changes, push your code and your are good to go.
            </p>
        </div>
        <div class="third half-t">
            {% include "snippets/why-not-navigation.twig" %}
        </div>
    </div>



    {% include 'snippets/quotes.twig' with {
    'quoteText'      : 'craft',
    'quoteClasses'   : 'hero-quote m-top-xl'
    } %}


    <h2 class="m-top-xxl type-xl">
        Featured Craft CMS sites hosted on fortrabbit
    </h2>

    <div class="row gutter-l wrap m-top-m">

        {% set apps = getResource("customers-apps") %}
        {% for item in apps %}
            {% if item.technology == "Craft" and item.single %}
                <div class="third half-t" data-category="{{ item.category | lower }}">
                    <a href="{{ item.url }}" class="browserchrome">
                        <div class="addressbar clip">
                            {{ item.url }}
                        </div>
                        <div class="screenshot"
                             style="background-image:url('{{ assetsremote }}/img/{{ item.screenshotfile }}');"></div>
                    </a>
                    <div class="type-s m-top-s">
                        <b>{{ item.name }}</b>: {{ item.info }}.
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>

    <p class="m-top-m" style="z-index:1000; position: relative">
        <a href="/customers">See more from our customers &rarr;</a>
    </p>



