{% extends "layout.twig" %}

{% set title       = "fortrabbit pricing | " ~ stack_title ~ "' stack" %}
{% set activeClass = 'nav_pricing' %}
{% set link        = 'pricing' %}

{% if stack == 'uni' %}{# NOTE: PRO stack pricing is broken with scrolling, links to IDs #}
{% set bodyClass   = 'animscroll' %}
{% endif %}

{% block headstuff %}

        <meta name="twitter:title" property="og:title" content="Universal Stack launched">
        <meta property="og:type" content="article">
        <meta name="twitter:description" property="og:description" content="Optimized for CMS driven websites - made for your needs: Backups, Git, SFTP, HTTPS &amp; team collaboration.">
        <meta name="twitter:card" content="summary_large_image">
        <meta name="twitter:image:src" property="og:image" content="https://blog.fortrabbit.com/dist/img/universal-poster.gif">
        <meta name="twitter:site" content="@fortrabbit">

{% endblock %}

{% block precontent %}
    {% include 'snippets/stack-chooser.twig' %}
{% endblock %}


{% block content %}

    {% include innerHtml %}
    {% include "snippets/signup-cta.twig" %}

    {% include (stack == 'uni') ? "snippets/shared-snippets/app-aspects-uni.twig" : "snippets/shared-snippets/app-aspects-pro.twig" %}
    {% include "snippets/shared-snippets/platform-aspects.twig" %}

{% endblock %}


{% if stack == 'pro' %}
    {% set javascripts %}
    <script>
        $(function () { $('#preset-launch').trigger('click'); });
        </script>
    {% endset %}
{% endif %}
