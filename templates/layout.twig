        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    {# OLIs tracker > separated properties #}
    ga('create', 'UA-431527-10', 'auto', { 'name': 'www_prop' });
    ga('www-prop.send', 'pageview');

    {# FRANKs tracker > one property, different views #}
    ga('create', 'UA-431527-14', 'auto');
    ga('require', 'linkid', 'linkid.js');

    // ga('require', 'linker');
    // ga('linker:autoLink', [
    //     'www.fortrabbit.com', 
    //     'blog.fortrabbit.com', 
    //     'dashboard.fortrabbit.com', 
    //     'help.fortrabbit.com'
    // ]);
    ga('send', 'pageview');


    $(function() {
        $.setActiveClass('{{ activeClass }}');
        $('[data-toggle="properties"]').addClass('shown');
    });

</script>
{# twitter conversion & remarketing test #}
<script src="//platform.twitter.com/oct.js" type="text/javascript"></script>
<script type="text/javascript">twttr.conversion.trackPid('l68g3', { tw_sale_amount: 0, tw_order_quantity: 0 });</script>
{% if javascripts %}{{ javascripts }}{% endif %}
</body>
</html>
