
{% set assetsremote = '//s3-eu-west-1.amazonaws.com/fortrabbit-static' %}


{% set cta_default = {
    'campaign'        : 'start',
    'button_wording_1': 'Test it for free',
    'button_wording_2': 'join more than 15k developers',
    'identifier'      : 'cta_lastaction_get_started_for_free'
    }
%}

{% if environment == 'local' %}

    {% set assetpath      = '/dist' %}
    {% set www_url        = 'http://www-fortrabbit-com' %}
    {% set help_url       = 'http://help-fortrabbit-com' %}
    {% set blog_url       = 'http://blog-fortrabbit-com' %}
    {% set dashboard_url  = 'http://dashboard-fortrabbit-com' %}

{% else %} {# production! #}

    {% set assetpath     = assetsremote %}
    {% set www_url       = 'http://www.fortrabbit.com' %}
    {% set help_url      = 'http://help.fortrabbit.com' %}
    {% set blog_url      = 'http://blog.fortrabbit.com' %}
    {% set dashboard_url = 'https://dashboard.fortrabbit.com' %}

{% endif %}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>{% if title %}{{ title }}{% else %}PHP cloud hosting{% endif %}</title>
    <meta name="keywords" content="php, paas, saas, iaas, laravel, application, hosting, cloud, platform, webhosting, web-hosting, apc, memcache, europe, berlin">

    {% include 'snippets/shared-snippets/shared-head.twig'  %}

    <link rel="stylesheet" type="text/css" href="{{ assetpath }}/css/fortrabbit.css?20150305">

    {# double check to break nothing #}
    {% if environment == 'local' %}
    <script src="{{ assetsremote }}/js/fortrabbit2.js"></script>
    {% else %} {# production! #}
    <script src="{{ assetpath }}/js/fortrabbit.js?20150306-02"></script>
    {% endif %}
</head>

<body>

<!--[if IE ]>
<div class="box pbigger alert spacerbottom type-l">Sorry, it looks like you are using an old version of Internet Explorer. Please upgrade your browser.</div>
<![endif]-->

<header>
    {% include 'snippets/shared-snippets/propertiesnav.twig'  %}
</header>

<main role="main">
    {% block content %}Ooops, something went wrong, somewhere.{% endblock %}
</main>

{# use default values or the ones set in the main content block #}
{% set cta = cta_default|merge(cta ? cta : {}) %}
{% include "snippets/shared-snippets/footer.twig" with cta %}


<script>

    {# general GOOGLE ANALYTICS CODE #}
