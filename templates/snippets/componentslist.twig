{% macro row(linkname, title, specs, price, class, nolink, other) %}
    {% if not nolink %}
    <a href="#" class="box row{% if class %} {{ class }}{% endif %} comp_listitem" id="comp_{{ linkname }}">
    {% else %}
    <div class="box row{% if class %} {{ class }}{% endif %} comp_listitem" id="comp_{{ linkname }}">
    {% endif %}
        <div>
            <div class="boldfont">{{ title }}</div>
            <div>{{ specs }}</div>
        </div>
        <div class="right auto keep doubletype">
            {% if price %}
            <span class="thinfont">€</span><span class="boldfont">{{ price }}</span>
            {% elseif other %}
            <span class="thinfont">{{ other|raw }}</span>
            {% endif %}
        </div>
    {% if not nolink %}
    </a>
    {% else %}
    </div>
    {% endif %}
{% endmacro %}


