<blockquote class="{% if quoteClasses %} {{ quoteClasses }}{% endif %}">
    <p class="{{ quoteTextClass | default('type-xl p-l') }}">{{ quote.quote | raw }}</p>
    <div class="row m-top-m{% if quoteCreditClass %} {{ quoteCreditClass }}{% endif %}">
        {% if quote.image %}
        <div style="background-image: url('{{ quote.image }}')" class="media-face media media-l"></div>
        {% endif %}
        <div class="{% if quote.image %}m-left-m{% endif %}">
            <a href="https://twitter.com/{{ quote.twitterhandle }}" title="{{ quote.title }}" class="author">
                {{ quote.name }}
            </a> {{ quote.countrycode }}<br>
            <span class="type-thin">{{ quote.title }}</span>
        </div>
    </div>
</blockquote>
